        {
            links.map(({href, text}) => (
                <a href={href}
                    class:list={[
                        'hover:text-gray-800 dark:hover:text-gray-200 mx-1.5 sm:mx-6',
                        {
                            'border-b-2 border-blue-500': currentPath === href,
                        }
                    ]}
                    >
                    {text}
                </a>
            ))
        }
        -->

        {
            links.map(({href, text}) => (
                <div>
                <a href={href}
                    class='hover:text-gray-800 dark:hover:text-gray-200 mx-1.5 sm:mx-6'>
                    {text}
                </a>
                
                {currentPath === href ? (
                    <div  transition:name="menu-line"
                        class="border-b-2 border-blue-500"
                    
                    />
                    
                ) : (
                    <div class="border-b-2 border-transparent"/>
                )}

                {/*<div class=" 'border-b-2 border-blue-500'"></div>*/}
                </div>

            ))
        }
    </div>
